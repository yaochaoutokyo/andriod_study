<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weichat_demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".DetailFriendActivity"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity android:name=".FriendChooseActivity"></activity>

        <activity android:name=".MainActivity"></activity>

        <service android:name=".service.StopMultiLoginService"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.StopMultiLoginService"></action>
            </intent-filter>
        </service>

        <receiver android:name=".receiver.MultiLoginBBReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.MultiLoginBBReceiver"></action>
            </intent-filter>
        </receiver>
    </application>
    // 弹出对话框权限
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"></uses-permission>
    // 消灭后台进程权限
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"></uses-permission>
</manifest>